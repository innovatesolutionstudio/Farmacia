    </body>
    <script>
 
        document.addEventListener('DOMContentLoaded', () => {
  // Hacer una solicitud al servidor para obtener los datos
  fetch('/datos3')
    .then(response => {
      if (!response.ok) {
        throw new Error('Error en la respuesta del servidor');
      }
      return response.json();
    })
    .then(data => {
      document.getElementById('comprasmensual').innerText = data.comprasmensual !== undefined ? data.comprasmensual +' Bs.' : 'No se encuentran compras';   
      document.getElementById('proveedorestotales').innerText = data.proveedorestotales!== undefined ? data.proveedorestotales  : 'No hay proveedores';
      document.getElementById('productostotales').innerText = data.productostotales!== undefined ? data.productostotales  : 'No hay productos';
    })
    .catch(error => {
      console.error('Error fetching data:', error);
      // Opcional: Mostrar un mensaje de error en la interfaz
      document.getElementById('comprasmensual').innerText = 'Error al cargar datos';
      document.getElementById('proveedorestotales').innerText = 'Error al cargar datos';
      document.getElementById('productostotales').innerText = 'Error al cargar datos';
      
    });
});


</script>
