<!DOCTYPE html>
<html lang="es">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
            crossorigin="anonymous" />
        <link rel="stylesheet" href="/resources/css/empleadoEspe.css" />

        <link rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <title>recursos - humanos</title>
    </head>

    <body>

        <!-- Encabezado -->
        <div class="header-container">
            <div class="breadcrumb">
                <a href="/empleados" class="reporte-link">
                    <h1
                        style="color: #858B92; font-weight: bold; margin-right: 5px;">Recursos
                        Humanos</h1>
                </a>
                <h2 style="font-size: 40px; margin: 0 10px;">›</h2>
                <h1 style="font-weight: bold;">Empleado</h1>
            </div>
            <!-- Párrafo debajo del encabezado -->
            <p class="subtext">Ver mas sobre el responsable.</p>
        </div>

        <% results.forEach(function(empleado) { %>

        <div class="container2">

            <!-- Primera Columna: Información Personal -->
            <div class="card1">

                <div class="header-card1">
                    <span>Información Personal</span>
                </div>

                <div class="content-card1">
                    <div class="profile-pic">
                        <img class="img-perfil"
                            src="/fotos/img_empleados/<%= empleado.Fotografia%>"
                            alt>
                    </div>
                    <h2><%= empleado.Nombre %> <%= empleado.Apellido %></h2>
                    <p><%= empleado.Email %></p>

                    <div class="info">
                        <div class="info-item">
                            <p><strong><%= empleado.ID_Empleado %></strong></p>
                            <p>ID</p>
                        </div>
                        <div class="info-item">
                            <p><strong><%= empleado.CI %></strong></p>
                            <p>CI</p>
                        </div>
                    </div>

                    <div class="actions">
                        <a href="/EditEmpleados/<%= empleado.ID_Empleado %>"
                            class="btn btn-edit">Editar</a>
                        <a href="#" class="btn btn-delete"
                            onclick="eliminarEmpleado('<%= empleado.ID_Empleado %>')">Eliminar</a>

                    </div>
                </div>
            </div>
            <!-- Segunda Columna dividida en 3 filas -->
            <div class="column2">
                <!-- Tarjeta de Datos -->
                <div class="card-data">
                    <div class="header-card1">
                        <span>Datos</span>
                    </div>

                    <div class="content-data">
                        <div class="data-group">
                            <p><strong><%= empleado.Genero %></strong></p>
                            <p>Género</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Teléfono %></strong></p>
                            <p>Teléfono</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Telefono_referencia
                                    %></strong></p>
                            <p>Teléfono Referencia</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Fecha_Nacimiento
                                    %></strong></p>
                            <p>Fecha Nacimiento</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Departamento %></strong></p>
                            <p>Departamento</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Dirección %></strong></p>
                            <p>Dirección</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta de Datos Administrativos -->
                <div class="card-data2">
                    <div class="header-card1">
                        <span>Datos Administrativos</span>
                    </div>

                    <div class="content-data2">
                        <div class="data-group">
                            <p><strong><%= empleado.Rol %></strong></p>
                            <p>Rol</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Ciudad %></strong></p>
                            <p>Ciudad</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Sucursal %></strong></p>
                            <p>Sucursal</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Caja %></strong></p>
                            <p>Nº Cajas</p>
                        </div>
                    </div>
                </div>

                <!-- Tarjeta de Datos Adicionales -->
                <div class="card-data3">
                    <div class="header-card1">
                        <span>Datos Adicionales</span>
                    </div>

                    <div class="content-data">
                        <div class="data-group">
                            <div style="position: relative;">
                                <input type="password" id="contrasena"
                                    value="<%= empleado.Contrasena %>" readonly
                                    style="border: none; background: none; font-size: inherit; font-weight: bold; padding: 0; margin: 0; width: auto;" />
                                <i class="fa fa-eye-slash"
                                    onclick="mostrarPassword()"
                                    id="show_password"
                                    style="cursor: pointer; font-size: 20px; margin-left: 10px;"></i>
                            </div>
                            <p>Contraseña</p>
                        </div>

                        <div class="data-group">
                            <p><strong>
                                    <% if (empleado.Grado == 1) { %>Intentos
                                    fallidos 1
                                    <% } else if (empleado.Grado == 2) {
                                    %>Intentos fallidos 2
                                    <% } else if (empleado.Grado == 3) {
                                    %>Intentos fallidos 3
                                    <% } else if (empleado.Grado == 4) {
                                    %>Cuenta bloqueada
                                    <% } else { %>Desconocido<% } %>
                                </strong></p>
                            <p>Grado</p>
                        </div>

                        <div class="data-group">
                            <p><strong>
                                    <% if (empleado.Estado == 1) { %>Activo
                                    <% } else if (empleado.Estado == 2) {
                                    %>Bloqueado
                                    <% } else { %>Desconocido<% } %>
                                </strong></p>
                            <p>Estado</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% }); %>

    </body>

    <script>
    $(document).ready(function () {
      
      let url2 = "/EditEmpleados/";
      $("#tablaEmpleados").on("click", ".btnEdit", function () {
      
        var id = data.ID_Empleado;
  
        Swal.fire({
          title: "¿Quieres ver detalles?",
          text: "Detalles del empleado",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Sí, ver!",
        }).then((result) => {
          if (result.isConfirmed) {
            // Redirigir a la URL de detallesempleados con el ID
            window.location.href = url2 + id;
  
          }
        });
      });
    });
  
    obtenerOpciones('/api/roles', '#ID_Rol');
  </script>

    <script type="text/javascript">
    function mostrarPassword() {
        var contrasenaElemento = document.getElementById("contrasena");
        var icono = document.getElementById("show_password");
        
        if (contrasenaElemento.type === "password") {
            contrasenaElemento.type = "text"; // Muestra la contraseña
            icono.classList.remove('fa-eye-slash');
            icono.classList.add('fa-eye');
        } else {
            contrasenaElemento.type = "password"; // Oculta la contraseña
            icono.classList.remove('fa-eye');
            icono.classList.add('fa-eye-slash');
        }
    }
</script>
    <script>
    function eliminarEmpleado(idEmpleado) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: "No podrás deshacer esta acción",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                // Enviar solicitud POST para eliminar
                fetch(`/EditEmpleados/${idEmpleado}?opcion=eliminar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: new URLSearchParams({ opcion: 'eliminar' })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire('¡Eliminado!', 'El empleado ha sido eliminado.', 'success')
                        .then(() => {
                            // Redirigir o actualizar la página después de eliminar
                            window.location.href = '/empleados';
                        });
                    } else {
                        Swal.fire('Error', 'No se pudo eliminar el empleado.', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error al eliminar empleado:', error);
                    Swal.fire('Error', 'Hubo un problema al eliminar el empleado.', 'error');
                });
            }
        });
    }
</script>

</html>