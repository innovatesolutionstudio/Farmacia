<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        crossorigin="anonymous" />
    <link rel="stylesheet" href="/resources/css/empleadoEspe.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <title>recursos - humanos</title>
</head>

<body>

    <!-- Encabezado -->
    <div class="header-container">
        <div class="breadcrumb">
            <a href="/empleados" class="reporte-link">
                <h1 style="color: #858B92; font-weight: bold; margin-right: 5px;">Recursos Humanos</h1>
            </a>
            <h2 style="font-size: 40px; margin: 0 10px;">›</h2>
            <h1 style="font-weight: bold;">Empleado</h1>
        </div>
        <!-- Párrafo debajo del encabezado -->
        <p class="subtext">Ver mas sobre el responsable.</p>
    </div>

    <% results.forEach(function(empleado) { %>

        <div class="container2">
    
            <!-- Primera Columna: Información Personal -->
            <div class="card1">
    
                <div class="header-card1">
                    <span>Información Personal</span>
                </div>
        
                <div class="content-card1">
                    <div class="profile-pic">
                        <span class="profile-initial"></span>
                    </div>
                    <h2><%= empleado.Nombre %> <%= empleado.Apellido %></h2>
                    <p><%= empleado.Email %></p>
        
                    <div class="info">
                        <div class="info-item">
                            <p><strong><%= empleado.ID_Empleado %></strong></p>
                            <p>ID</p>
                        </div>
                        <div class="info-item">
                            <p>CI</p>
                        </div>
                    </div>
        
                    <div class="actions">
                        <a href="/formularioEmpleados" class="btn btn-edit">Editar</a>
                        <a class="btn btn-delete">Eliminar</a>
                    </div>
                </div>
            </div>
        
            <!-- Segunda Columna dividida en 3 filas -->
            <div class="column2">
                <!-- Tarjeta de Datos -->
                <div class="card-data">
                    <div class="header-card1">
                        <span>Datos</span>
                    </div>
        
                    <div class="content-data">
                        <div class="data-group">
                            <p><strong><%= empleado.Genero %></strong></p>
                            <p>Género</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Teléfono %></strong></p>
                            <p>Teléfono</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Telefono_referencia %></strong></p>
                            <p>Teléfono Referencia</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Fecha_Nacimiento %></strong></p>
                            <p>Fecha Nacimiento</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Departamento %></strong></p>
                            <p>Departamento</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Dirección %></strong></p>
                            <p>Dirección</p>
                        </div>
                    </div>
                </div>
        
                <!-- Tarjeta de Datos Administrativos -->
                <div class="card-data2">
                    <div class="header-card1">
                        <span>Datos Administrativos</span>
                    </div>
        
                    <div class="content-data2">
                        <div class="data-group">
                            <p><strong><%= empleado.Rol %></strong></p>
                            <p>Rol</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Ciudad %></strong></p>
                            <p>Ciudad</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Sucursal %></strong></p>
                            <p>Sucursal</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Caja %></strong></p>
                            <p>Nº Cajas</p>
                        </div>
                    </div>
                </div>
        
                <!-- Tarjeta de Datos Adicionales -->
                <div class="card-data3">
                    <div class="header-card1">
                        <span>Datos Adicionales</span>
                    </div>
        
                    <div class="content-data">
                        <div class="data-group">
                            <p><strong><%= empleado.Contrasena %></strong></p>
                            <p>Contraseña</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Grado %></strong></p>
                            <p>Grado</p>
                        </div>
                        <div class="data-group">
                            <p><strong><%= empleado.Estado %></strong></p>
                            <p>Estado</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    <% }); %>
    
</body>


</html>