  <script>
    document.getElementById('notificacion-form').addEventListener('submit', function(event) {
        event.preventDefault(); // Evitar el envío del formulario

        const correo = this.correo.value; // Obtener el valor del campo de correo

        // Validar el correo con la base de datos
        fetch('/login/validar-correo', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ correo }) // Convertir el objeto a una cadena JSON
        })
        .then(response => response.json())
        .then(data => {
            if (data.exists) {
                this.submit(); // Enviar el formulario si el correo existe
            } else {
                alert('El correo no está registrado en el sistema.'); // Mostrar mensaje de error
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Hubo un problema al validar el correo. Inténtalo nuevamente.');
        });
    });
</script>
 
