<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Ventas y Pedidos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        .container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }
        .form-container {
            width: 48%;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            background-color: #28a745;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #218838;
        }
        h2 {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Formulario de Ventas -->
        <div class="form-container">
            <h2>Formulario de Ventas</h2>
            <form action="/ruta-para-procesar-ventas" method="post">
                <input type="hidden" name="id_venta" value="auto-generado">

                <div class="form-group">
                    <label for="fecha_venta">Fecha de Venta</label>
                    <input type="datetime-local" id="fecha_venta" name="fecha_venta" 
                           value="<%= typeof venta !== 'undefined' && venta.Fecha_Venta ? new Date(venta.Fecha_Venta).toISOString().slice(0, 16) : new Date().toISOString().slice(0, 16) %>" 
                           readonly>
                </div>
                
                <div class="form-group">
                    <label for="total_venta">Total de la Venta</label>
                    <input type="number" id="total_venta" name="total_venta" 
                           value="<%= typeof totalCarrito !== 'undefined' ? parseFloat(totalCarrito) : 0 %>" 
                           readonly>
                </div>
                
                <div class="form-group">
                    <label for="id_cliente">ID Cliente</label>
                    <input type="text" id="id_cliente" name="id_cliente" 
                           value="<%= typeof cliente !== 'undefined' ? cliente.ID_Cliente : '' %>" 
                           readonly>
                </div>
                
                <div class="form-group">
                    <label for="id_empleado">ID Empleado</label>
                    <select id="id_empleado" name="id_empleado" required>
                        <% if (typeof empleadosRol5 !== 'undefined' && empleadosRol5.length > 0) { %>
                            <% empleadosRol5.forEach(function(empleado) { %>
                                <option value="<%= empleado.ID_Empleado %>">
                                    <%= empleado.Nombre %>
                                </option>
                            <% }); %>
                        <% } else { %>
                            <option value="">No hay empleados disponibles</option>
                        <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="id_sucursal">ID Sucursal</label>
                    <input type="text" id="id_sucursal" name="id_sucursal" 
                           value="<%= typeof idSucursal !== 'undefined' ? idSucursal : '' %>" 
                           readonly>
                </div>

                <div class="form-group">
                    <label for="id_caja">ID Caja</label>
                    <input type="text" id="id_caja" name="id_caja" value="1" readonly>
                </div>

                <input type="hidden" name="estado" value="1">
                <button type="submit">Guardar Venta</button>
            </form>
        </div>

        <!-- Formulario de Pedidos -->
        <div class="form-container">
            <h2>Formulario de Pedidos</h2>
            <form action="/ruta-para-procesar-pedidos" method="post">
                <input type="hidden" name="id_pedido" value="auto-generado">
                
                <div class="form-group">
                    <label for="id_empleado_pedido">ID Empleado</label>
                    <select id="id_empleado_pedido" name="id_empleado_pedido" required>
                        <% if (typeof empleadosRol7 !== 'undefined' && empleadosRol7.length > 0) { %>
                            <% empleadosRol7.forEach(function(empleado) { %>
                                <option value="<%= empleado.ID_Empleado %>">
                                    <%= empleado.Nombre %>
                                </option>
                            <% }); %>
                        <% } else { %>
                            <option value="">No hay empleados disponibles</option>
                        <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="id_cliente_pedido">ID Cliente</label>
                    <input type="text" id="id_cliente_pedido" name="id_cliente_pedido" 
                           value="<%= typeof cliente !== 'undefined' ? cliente.ID_Cliente : '' %>" 
                           readonly>
                </div>

                <div class="form-group">
                    <label for="direccion">Direcci√≥n</label>
                    <textarea id="direccion" name="direccion" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="id_distrito">Distrito</label>
                    <select id="id_distrito" name="id_distrito" required>
                        <% if (typeof distritos !== 'undefined' && distritos.length > 0) { %>
                            <% distritos.forEach(function(distrito) { %>
                                <option value="<%= distrito.ID_distritos %>" data-ciudad="<%= distrito.ID_ciudad %>">
                                    Distrito <%= distrito.ID_distritos %> - Ciudad <%= distrito.ID_ciudad %>
                                </option>
                            <% }); %>
                        <% } else { %>
                            <option value="">No hay distritos disponibles</option>
                        <% } %>
                    </select>
                </div>
                <button type="submit">Guardar Pedido</button>
            </form>
        </div>
    </div>
    <script>
                // Asegurarse de que el total del carrito se actualice correctamente
                document.addEventListener('DOMContentLoaded', function() {
            // Obtener el total del carrito de la URL
            const urlParams = new URLSearchParams(window.location.search);
            const totalCarrito = urlParams.get('totalCarrito');
            
            if (totalCarrito) {
                document.getElementById('total_venta').value = parseFloat(totalCarrito);
            }
        });
        // En tu archivo JavaScript
        window.onload = function() {
            let today = new Date();
            let date = today.toISOString().slice(0, 16); // Formato YYYY-MM-DDTHH:mm
            document.querySelector('input[type="datetime-local"]').value = date;
        }
    </script>
</body>
</html>
