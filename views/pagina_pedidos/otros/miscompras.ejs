                                <td colspan="6" style="text-align: center;">No se encontraron pedidos</td>
                            </tr>
                        <% } %>
                        <button class="btn-crear" onclick="showModal()">
                            <i class="fas fa-plus"></i> Crear Recordatorio
                        </button>
                    </tbody>
                </table>
            </div>
            
            <!--fin de contenido de mis pedidos-->
        </div>
