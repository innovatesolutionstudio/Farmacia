<body>
        <!-- Main Content -->
        <div class="main-content" id="main-content">
           
            <!-- Comienzo de contenido -->
            <div class="table-container">
                <h3>Mis pedidos</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Sucursal</th>
                            <th>Dirección</th>
                            <th>Delivery</th>
                            <th>Monto</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (pedidos.length > 0) { %>
