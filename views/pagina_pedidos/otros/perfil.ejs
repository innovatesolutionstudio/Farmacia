<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/resources/css/sistema_clientes/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="icon" href="/resources/images/iconos/farmacia.ico">

</head>
<body>

    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="user_img">
                    <img
                        class="img-responsive"
                        src="/resources/images/logo/logo_fm2.png"
                        alt="Logo"
                    />
                </div>
                <h2>FARMACIA</h2>
                <p>25 DE JULIO</p>
            </div>
            
            <ul class="sidebar-menu">
                <li><a href="#" class="menu-link" data-page="/pagina_pedidos/otros/miscompras"><i class="fas fa-shopping-cart"></i> Mis pedidos</a></li>
                <li><a href="#" class="menu-link" data-page="/pagina_pedidos/otros/consultas"><i class="fas fa-question-circle"></i> Consultas</a></li>
                <li><a href="#" class="menu-link" data-page="/pagina_pedidos/otros/recordatorio"><i class="fas fa-bell"></i> Mi lista de compras</a></li>
                <li><a href="#" class="menu-link" data-page="/pagina_pedidos/otros/contactanos"><i class="fas fa-envelope"></i> Contáctanos</a></li>
            </ul>
            <a href="/pagina_pedidos/logout" class="create-account">Cerrar sesión</a>
        </div>
        <!-- Contenido inicial -->
       
        <!-- Main Content -->
        <div class="main-content" id="main-content">
            <div class="topbar">
                <h1>Bienvenido de nuevo -> <%= cliente.Nombre %></h1>
                <button class="button" id="view-profile">Ver mi perfil</button>
            </div>
            <iframe id="content-frame" src="/pagina_pedidos/otros/miscompras" frameborder="0"></iframe>
        </div>
    </div>
    

    <!-- FontAwesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Cargar contenido dinámico en el iframe
        document.querySelectorAll('.menu-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const page = link.getAttribute('data-page');
                const contentFrame = document.getElementById('content-frame');
                contentFrame.src = page; // Cambiar el src del iframe para cargar la página seleccionada
            });
        });
    </script>

<script>
    // Datos del cliente (simulación para demostración, reemplaza con tu lógica)
    const cliente = {
        Nombre: "<%= cliente.Nombre %>",
        Apellido: "<%= cliente.Apellido %>",
        Telefono: "<%= cliente.Telefono %>",
        CI: "<%= cliente.CI %>",
        Nit: "<%= cliente.Nit %>",
    };

    // Manejar clic en el botón para mostrar el perfil
    document.getElementById('view-profile').addEventListener('click', () => {
        Swal.fire({
            title: '<h2 style="color: #6c63ff; margin-bottom: 10px;">Mi Perfil</h2>',
            html: `
                <div style="text-align: left; font-size: 16px; color: #333;">
                    <div style="margin-bottom: 10px;">
                        <strong>Nombre:</strong> <span style="color: #555;">${cliente.Nombre}</span>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <strong>Apellido:</strong> <span style="color: #555;">${cliente.Apellido}</span>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <strong>Teléfono:</strong> <span style="color: #555;">${cliente.Telefono}</span>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <strong>CI:</strong> <span style="color: #555;">${cliente.CI}</span>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <strong>NIT:</strong> <span style="color: #555;">${cliente.Nit}</span>
                    </div>
                </div>
                
            `,
            showCloseButton: true,
            confirmButtonText: 'Cerrar',
            confirmButtonColor: '#6c63ff',
            customClass: {
                popup: 'custom-swal-popup',
            },
        });
    });
</script>

</body>
</html>
