<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de Ventas</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f4f6f9;
        }
        .sales-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            padding: 20px;
            margin-top: 20px;
        }
        .table-responsive {
            max-height: 500px;
            overflow-y: auto;
        }
        .table thead {
            position: sticky;
            top: 0;
            background-color: #6c63ff;
            color: white;
        }
        .empty-state {
            text-align: center;
            padding: 50px;
            color: #6c63ff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sales-container">
            <h2 class="mb-4">
                <i class="fas fa-receipt me-2"></i>Mi Historial de Compras
            </h2>
            
            <% if (locals.cliente && cliente.Nombre) { %>
                <div class="alert alert-info" role="alert">
                    Bienvenido, <%= cliente.Nombre %> <%= cliente.Apellido || '' %>
                </div>
            <% } %>

            <% if (locals.ventas && ventas.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Fecha de Compra</th>
                                <th>Total</th>
                                <th>Empleado</th>
                                <th>Sucursal</th>
                                <th>Código de Caja</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% ventas.forEach(function(venta) { %>
                                <tr>
                                    <td><%= new Date(venta.Fecha_Venta).toLocaleDateString() %></td> <!-- Formatea la fecha de venta -->
                                    <td>Bs. <%= venta.Total_Venta.toFixed(2) %></td> <!-- Muestra el total con dos decimales -->
                                    <td><%= venta.Empleado %></td> <!-- Nombre del empleado -->
                                    <td><%= venta.Sucursal %></td> <!-- Nombre de la sucursal -->
                                    <td><%= venta.Codigo %></td> <!-- Código de la caja -->
                                </tr>
                            <% }); %>                            
                        </tbody>
                    </table>
                </div>
                <div class="text-muted mt-3">
                    Total de compras: <%= ventas.length %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-shopping-cart fa-4x mb-3"></i>
                    <h3>Aún no tiene compras registradas</h3>
                    <p>Sus compras aparecerán aquí cuando realice una transacción.</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Optional: Add interactivity for sale details
        document.querySelectorAll('.detalle-venta').forEach(button => {
            button.addEventListener('click', function() {
                const codigoCaja = this.getAttribute('data-id');
                // Here you could add logic to show sale details, 
                // perhaps via a modal or AJAX request
                alert('Detalles de venta - Código de Caja: ' + codigoCaja);
            });
        });
    </script>
</body>
</html>