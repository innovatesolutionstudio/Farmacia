<script>
    // Gráfico 1: Ventas y Ganancias por Gestión (Barras Apiladas)
    var ctx1 = document.getElementById('grafico1').getContext('2d');
    var grafico1 = new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: ['Gestión 1', 'Gestión 2', 'Gestión 3', 'Gestión 4'],
            datasets: [{
                label: 'Ventas',
                data: [50000, 60000, 70000, 80000],
                backgroundColor: '#03A9F5'
            },
            {
                label: 'Ganancias',
                data: [20000, 30000, 40000, 50000],
                backgroundColor: '#58C9F3'
            }]
        },
        options: {
            responsive: true,
            scales: {
                x: {
                    stacked: true,
                    ticks: {
                        color: '#FFFFFF' // Letras blancas
                    }
                },
                y: {
                    stacked: true,
                    beginAtZero: true,
                    ticks: {
                        color: '#FFFFFF' // Letras blancas
                    }
                }
            },
            plugins: {
                legend: {
                    labels: {
                        color: '#FFFFFF' // Leyenda en blanco
                    }
                }
            }
        }
    });
</script>
<script>
